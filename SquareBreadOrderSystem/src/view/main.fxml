<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
	fx:controller="controller.RootController" prefHeight="60"
	prefWidth="100">
	<VBox>
		<children>
			<HBox alignment="CENTER">
				<padding>
					<Insets top="20" left="25" right="25" />
				</padding>
				<Button fx:id="btnEmployee" prefHeight="100" prefWidth="500">직원관리</Button>
			</HBox>
			<HBox alignment="CENTER">
				<padding>
					<Insets top="40" left="25" right="25" />
				</padding>
				<Button fx:id="btnGoods" prefHeight="100" prefWidth="500">주문관리</Button>
			</HBox>
			<HBox alignment="CENTER">
				<padding>
					<Insets top="60" left="25" right="25" bottom="20"/>
				</padding>
				<children>
					<Button fx:id="btnSales" prefHeight="100" prefWidth="500">매출현황관리</Button>
				</children>
			</HBox>
		</children>
	</VBox>
</AnchorPane>

