<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="250"
	prefHeight="200" fx:controller="controller.JoinController">
	<VBox>
		<padding>
			<Insets top="20" left="90" right="90" bottom="90" />
		</padding>
		<spacing>10</spacing>
		<children>
			<HBox>
				<padding>
					<Insets top="20" left="100" right="100" bottom="50" />
				</padding>
				<children>
					<Label text="관리자 등록" />
				</children>
			</HBox>
			<HBox alignment="CENTER">
				<children>
					<Label text="아이디 : " />
					<TextField fx:id="txtId" prefWidth="150" />
				</children>
			</HBox>
			<HBox alignment="CENTER">
				<children>
					<Label text="비밀번호 : " />
					<TextField fx:id="txtPassword" prefWidth="150" />
				</children>
			</HBox>
			<HBox alignment="CENTER">
				<children>
					<Label text="비밀번호 확인 : " />
					<TextField fx:id="txtPassword2" prefWidth="100" />
				</children>
			</HBox>
			<HBox alignment="CENTER">
				<spacing>20</spacing>
				<padding>
					<Insets top="20" />
				</padding>
				<children>
					<Button fx:id="btnOverlep" text="아이디 중복 확인" />
					<Button fx:id="btnOk" text="등록" />
					<Button fx:id="btnCancel" text="닫기" />
				</children>
			</HBox>
		</children>
	</VBox>
</AnchorPane>

